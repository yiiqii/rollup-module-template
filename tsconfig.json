{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitThis": true,
    "outDir": "./lib",
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules"
  ]
}
